#! /usr/bin/env ruby

require "diffaroo"

delta_set = Diffaroo.diff(File.read(ARGV[0]), File.read(ARGV[1]))
summary = delta_set.deltas.map do |d|
  d.descriptor
end

File.open("foo.yml",  "w+") {  |f| f.puts summary.to_yaml }
File.open("foo.html", "w+") do |f|
  doc = Nokogiri::HTML File.read(ARGV[0])
  delta_set.apply!(doc)
  f.puts doc.to_html
end
